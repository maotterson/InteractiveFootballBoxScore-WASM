@using InteractiveFootballBoxScore_WASM.PbpParser.Models
<svg class="mx-0" style="width:8%;height:100%;">
    <rect width="100%" height="100%" fill="@team.PrimaryColor" stroke="black" />
    <text class="endzone-text-@homeOrAway" text-anchor="middle" dominant-baseline="central" x="50%" y="50%" fill="@team.SecondaryColor">@team.Name</text>
</svg>
@code {
    [Parameter]
    public Team team { get; set; }

    [Parameter]
    public string homeOrAway { get; set; }
}
