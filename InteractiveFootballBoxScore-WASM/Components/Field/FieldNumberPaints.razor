<text x="@yardLine%" y="75%" stroke="white" fill="white" dominant-baseline="middle" text-anchor="middle">@yardLabel</text>
<text x="@yardLine%" y="25%" stroke="white" fill="white" dominant-baseline="middle" text-anchor="middle">@yardLabel</text>

@code {
    [Parameter]
    public int yardLine { get; set; }
    public int yardLabel {
        get {
            if(yardLine > 50)
            {
                return 100-yardLine;
            }
            return yardLine;
        }
    }
}
            
