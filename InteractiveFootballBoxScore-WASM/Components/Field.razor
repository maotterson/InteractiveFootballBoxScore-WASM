<div class="flex flex-row">
    <!-- endzone 1 -->
    <svg class="mx-0" style="width:10%;height:100%;">
        <rect width="100%" height="100%" fill="red" stroke="black" />
    </svg>

    <!-- play area -->
    <svg class="mx-0 " style="width:80%;height:100%;">
      <g>
        <rect width="100%" height="100%" fill="green" stroke="black" />
    
        <!-- yardlines -->
        @for(int i=5; i<=95; i+=5)
        {
            <line x1="@i%" y1="0%" x2="@i%" y2="100%" stroke="white"/>
        }
    
      </g>
    </svg>
    <!-- endzone 2 -->
    <svg class="mx-0 " style="width:10%;height:100%;">
        <rect width="100%" height="100%" fill="red" stroke="black" />
    </svg>
</div>

